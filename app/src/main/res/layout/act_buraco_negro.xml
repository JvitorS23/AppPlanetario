<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ActBuracoNegro">

    <TextView
        android:id="@+id/txtIdBuraco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="ID:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNomeBuraco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nome:"
        app:layout_constraintEnd_toEndOf="@+id/txtIdBuraco"
        app:layout_constraintStart_toStartOf="@+id/txtIdBuraco"
        app:layout_constraintTop_toBottomOf="@+id/txtIdBuraco" />

    <TextView
        android:id="@+id/txtDistTerraBuraco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="DistÃ¢ncia da Terra:"
        app:layout_constraintEnd_toEndOf="@+id/txtNomeBuraco"
        app:layout_constraintStart_toStartOf="@+id/txtNomeBuraco"
        app:layout_constraintTop_toBottomOf="@+id/txtNomeBuraco" />

    <TextView
        android:id="@+id/txtGravidadeBuraco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Gravidade: "
        app:layout_constraintEnd_toEndOf="@+id/txtDistTerraBuraco"
        app:layout_constraintStart_toStartOf="@+id/txtDistTerraBuraco"
        app:layout_constraintTop_toBottomOf="@+id/txtDistTerraBuraco" />

    <TextView
        android:id="@+id/txtTamanhoBuraco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tamanho: "
        app:layout_constraintEnd_toEndOf="@+id/txtGravidadeBuraco"
        app:layout_constraintStart_toStartOf="@+id/txtGravidadeBuraco"
        app:layout_constraintTop_toBottomOf="@+id/txtGravidadeBuraco" />

    <Button
        android:id="@+id/btnRemoverBuraco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:onClick="removeBuraco"
        android:text="@string/btn_remover_buraco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>